        <tbody>
          <% rooms.forEach(room => { %>
          <tr>
            <td><%= room.name %></td>
            <td><%= room.nameI %></td>
            <td style="text-align: right;">
              <a class="btn btn-sm btn-success" href="/room/<%= room._id %>">
                <% if(lang=="english"){ %>
                Edit
                <% } else{ %>
                Modificare
                <% } %>
              </a>
              &nbsp;
              <!-- Add data-toggle and data-target attributes to trigger the modal -->
              <a class="btn btn-sm btn-danger delete-room" data-toggle="modal" data-target="#confirmationModal<%= room._id %>" data-roomid="<%= room._id %>">
                <% if(lang=="english"){ %>
                Delete
                <% } else{ %>
                Eliminare
                <% } %>
              </a>
            </td>
          </tr>
          <div class="modal" tabindex="-1" role="dialog" id="confirmationModal<%= room._id %>">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title"><% if(lang=="english"){ %>
                    Confirm Deletion
                    <% } else{ %>
                      Confermare la cancellazione
                    <% } %></h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  
                  <% if(lang=="english"){ %>
                    Are you sure you want to delete?
                    <% } else{ %>
                      Sei sicuro di voler eliminare?
                    <% } %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal"><% if(lang=="english"){ %>
                    No
                    <% } else{ %>
                      NO
                    <% } %></button>
                  <a class="btn btn-sm btn-danger" href="/delete-room/<%= room._id %>"><% if(lang=="english"){ %>
                    Yes
                    <% } else{ %>
                      SÌ
                    <% } %></a>
                </div>
              </div>
            </div>
          </div>
          <% }); %>
        </tbody>
      </table>
